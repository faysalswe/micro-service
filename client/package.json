{
  "name": "webapp",
  "version": "1.0.0",
  "description": "Modern web application built with Remix, Mantine, and Tailwind CSS",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "npm run sync-tokens && react-router dev",
    "sync-tokens": "tsx scripts/sync-tokens.ts",
    "build": "npm run sync-tokens && react-router build",
    "start": "react-router-serve ./build/server/index.js",
    "lint": "eslint app --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint app --ext .ts,.tsx --fix",
    "format": "prettier --write \"app/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"app/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "validate": "npm run lint && npm run type-check && npm run format:check",
    "prepare": "husky install"
  },
  "dependencies": {
    "@mantine/core": "^7.13.5",
    "@mantine/form": "^7.13.5",
    "@mantine/hooks": "^7.13.5",
    "@mantine/notifications": "^7.13.5",
    "@react-router/dev": "^7.13.0",
    "@react-router/node": "^7.13.0",
    "@react-router/serve": "^7.13.0",
    "@tabler/icons-react": "^2.47.0",
    "@tanstack/react-query": "^5.62.0",
    "i18next": "^23.16.8",
    "i18next-http-backend": "^2.6.2",
    "isbot": "^4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^15.1.3",
    "react-router": "^7.13.0",
    "react-router-dom": "^7.13.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.1",
    "eslint-plugin-jsdoc": "^50.6.1",
    "husky": "^9.1.7",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2",
    "vite": "^5.4.11",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
