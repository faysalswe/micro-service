# WARNING: This is an example file. Do NOT commit actual secrets.
# Use `kubectl create secret` or a secrets management tool in production.
#
# Example usage:
# kubectl create secret generic db-credentials \
#   --from-literal=POSTGRES_USER=admin \
#   --from-literal=POSTGRES_PASSWORD=<secure-password> \
#   --from-literal=POSTGRES_DB=orders_db \
#   --from-literal=MONGO_INITDB_ROOT_USERNAME=admin \
#   --from-literal=MONGO_INITDB_ROOT_PASSWORD=<secure-password> \
#   --from-literal=ConnectionStrings__DefaultConnection="Host=postgres;Database=orders_db;Username=admin;Password=<secure-password>" \
#   --from-literal=MONGO_URI="mongodb://admin:<secure-password>@mongodb:27017" \
#   -n microservices

apiVersion: v1
kind: Secret
metadata:
  name: db-credentials
  namespace: microservices
  labels:
    app.kubernetes.io/part-of: microservices
type: Opaque
stringData:
  # PostgreSQL credentials
  POSTGRES_USER: "admin"
  POSTGRES_PASSWORD: "CHANGE_ME_IN_PRODUCTION"
  POSTGRES_DB: "orders_db"

  # MongoDB credentials
  MONGO_INITDB_ROOT_USERNAME: "admin"
  MONGO_INITDB_ROOT_PASSWORD: "CHANGE_ME_IN_PRODUCTION"

  # Connection strings for services
  ConnectionStrings__DefaultConnection: "Host=postgres;Database=orders_db;Username=admin;Password=CHANGE_ME_IN_PRODUCTION"
  MONGO_URI: "mongodb://admin:CHANGE_ME_IN_PRODUCTION@mongodb:27017"
