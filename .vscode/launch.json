{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "IdentityService",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-identity",
      "program": "${workspaceFolder}/IdentityService/bin/Debug/net10.0/IdentityService.dll",
      "args": [],
      "cwd": "${workspaceFolder}/IdentityService",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    },
    {
      "name": "OrderService",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-order",
      "program": "${workspaceFolder}/OrderService/bin/Debug/net10.0/OrderService.dll",
      "args": [],
      "cwd": "${workspaceFolder}/OrderService",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    },
    {
      "name": "InventoryService",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/InventoryService/cmd/server/main.go",
      "cwd": "${workspaceFolder}/InventoryService",
      "envFile": "${workspaceFolder}/InventoryService/.env"
    },
    {
      "name": "PaymentService",
      "type": "pwa-node",
      "request": "launch",
      "cwd": "${workspaceFolder}/PaymentService",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["run", "start"],
      "envFile": "${workspaceFolder}/PaymentService/.env",
      "console": "integratedTerminal"
    },
    {
      "name": "Storefront (React)",
      "type": "pwa-node",
      "request": "launch",
      "cwd": "${workspaceFolder}/storefront",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["run", "dev"],
      "envFile": "${workspaceFolder}/storefront/.env",
      "console": "integratedTerminal"
    },
    {
      "name": "Admin Tool (Angular)",
      "type": "pwa-node",
      "request": "launch",
      "cwd": "${workspaceFolder}/back-office",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["run", "start"],
      "console": "integratedTerminal"
    }
  ],
  "compounds": [
    {
      "name": "Run All Projects",
      "configurations": [
        "IdentityService",
        "OrderService",
        "InventoryService",
        "PaymentService",
        "Storefront (React)",
        "Admin Tool (Angular)"
      ]
    }
  ]
}
